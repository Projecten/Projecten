    function __construct()
    {
        parent::__construct();
    }

     function get($alumnusid, $lijstid)
    {
        $this->db->where('alumnusId', $alumnusid);
        $this->db->where('lijstId', $lijstid);
        $query = $this->db->get('mailinglijst_alumnus');
        return $query->row();
    }

    function getAll()
    {
        $this->db->order_by('lijstId', 'asc');
        $query = $this->db->get('mailinglijst_alumnus');
        return $query->result();
    }
}

