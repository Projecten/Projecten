    function __construct()
    {
        parent::__construct();
    }

        function get($id)
    {
        $this->db->where('specialisatieId', $id);
        $query = $this->db->get('specialisatie');
        return $query->row();
    }

    function getAll()
    {
        $this->db->order_by('specialisatieId', 'asc');
        $query = $this->db->get('specialisatie');
        return $query->result();
    }
                        
}

