    function __construct()
    {
        parent::__construct();
    }

        
         function get($id)
    {
        $this->db->where('richtingId', $id);
        $query = $this->db->get('richting');
        return $query->row();
    }

    function getAll()
    {
        $this->db->order_by('naam', 'asc');
        $query = $this->db->get('richting');
        return $query->result();
    }
}

