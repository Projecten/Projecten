    function __construct()
    {
        parent::__construct();
    }

     function get($id)
    {
        $this->db->where('bijlageId', $id);
        $query = $this->db->get('bijlage');
        return $query->row();
    }

    function getAll()
    {
        $this->db->order_by('bijlageId', 'asc');
        $query = $this->db->get('bijlage');
        return $query->result();
    }
}
