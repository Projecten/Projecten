.buttons{
    font-size: 12px;
}

.edit{
    width: 32px;
    height: 32px;
    background-image: url(images/edit.png) !important;
}

.delete {
    width: 32px;
    height: 32px;
    background-image: url(images/delete.png) !important;
}

#dialog-delete, #dialog-delete-fout{
    font-size: 75%;
}

.datum {
    width: 75px;
}

h1, h2, h3 {
    margin: 0;
    padding: 0;
    padding-bottom: 10px;
    font-family: 'Abel', sans-serif;
    font-weight: 200;
    color: #222222;
}

ol, ul {
    margin: 5px;
    padding: 20px;
}

p, ol {
    line-height: 180%;
}

p {
    padding: 20px 0px;
    margin: 5px;
}

a {
    color: #5C5539;
}

a:hover {
    text-decoration: none;
}

a img {
    border: none;
}

img.alignleft {
    float: left;
}

img.alignright {
    float: right;
}

img.aligncenter {
    margin: 0px auto;
}

/** WRAPPER */

#wrapper {
}

.container {
    width: 1000px;
    margin: 0px auto;
}

.clearfix {
    clear: both;
}

/* Header */

#header-wrapper {
    overflow: hidden;
    height: 157px;
    background: #DEE3E5;
    background-image:url(images/page-header.png);
}

#header {
    width: 1200px;
    height: 140px;
    margin: 0 auto;
    padding: 0px 0px;
    z-index: 2;

}

#loginwrapper {
    position: relative;
    color: #10202F;
    float: right;
    font-size: 14px;
    z-index: 2;
    /*margin-top: 10px;*/
}

text, password {
    position: relative;
    color: #10202F;
    font-size: 12px;
    width: 160px;
}

.buttons {
    width: auto;
}

#wachtwoordvergeten{
    font-size: 8px;
    margin-top: -20px;
}

/* Logo */

#logo {
    float: left;
    width: 300px;
    height: 80px;
    margin: 0px;
    margin-top: 15px;
    padding: 0px;
}
#logo img {
    width: 200px;
}

#logo h1 {
    padding: 40px 0px 0px 0px;
    background: /*url(images/logo.png)*/ no-repeat left 50%;
    text-transform: lowercase;
    letter-spacing: -2px;
    font-size: 3.6em;
}

#logo h1 a {
    text-decoration: none;
    color: #1B2024;
}

/* Menu */

#menu {
    position: static;
    float: right;
    width: 650px;
    height: 80px;
    margin-top: -80px;
    margin-left: 555px;
    z-index: 1;
}

#menu ul {
    float: right;
    padding: 40px 0px 0px 0px;
    list-style: none;
    line-height: normal;
}

#menu li {
    float: left;
}

#menu a {
    display: block;
    margin-left: 1px;
    padding: 5px 20px 5px 20px;
    text-decoration: none;
    text-align: center;
    text-transform: uppercase;
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 300;
    color: #10202F;
}

#menu a:hover, #menu .current_page_item a {
    text-decoration: none;
    background: #53cfec;
    border-radius: 5px;
    color: #FFFFFF;
}

/* Page */

#page-wrapper {
    overflow: hidden;
    background: #F1F2E9;
    min-height: 500px;
}

#page {
    overflow: hidden;
    width: auto;
    margin: 0px 160px;
    padding: 25px 0px;
    color: #8F8F8F;
}

table.fancy {
    margin: 10px 0px;
    border-collapse: collapse;
}

table.fancy tr:hover {
    border: 1px solid #fbcb09;
    background: #fdf5ce url(images/ui-bg_glass_100_fdf5ce_1x400.png) 50% 50% repeat-x;
    color: #c77405;
}

table.fancy th, table.fancy td {
    border: 1px silver solid;
    padding: 0.2em;
    padding: 3px 6px;
}

table.fancy th {
    background: gainsboro;
    text-align: left;
}

table.fancy caption {
    margin-left: inherit;
    margin-right: inherit;
}

/** CONTENT */

#content {
    float: left;
    width: 850px;
    padding: 0px 0px 0px 0px;
    color: #555555;
    padding-left: 50px;
}

#content h2 {
    padding: 0px 0px 30px 0px;
    letter-spacing: -1px;
    font-size: 36px;
    color: #222222;
}

#content .subtitle {
    padding: 0px 0px 30px 0px;
    text-transform: uppercase;
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    color: #81AFC5;
}

/** SIDEBAR */

#sidebar {
    
    width: 290px;
    padding: 0px 0px 20px 0px;
}

#sidebar table{
    border: #10202F 1px solid;
}

#sidebar table a {
    text-decoration:none;

}

#sidebar h2 {
    padding: 0px 0px 30px 0px;
    letter-spacing: -1px;
    font-size: 2em;
}

/* Footer */

#footer {
    margin: 15px auto;
    font-family: 'Verdana', sans-serif;
    color: #FFFFFF;
    height: 25px;
}

#footer p {
    padding: 0px;
    margin: 0;
    letter-spacing: 1px;
    line-height: normal;
    font-size: 10px;
    text-align: center;
    color: #4D565E;
}

#footer a {
    color: #4D565E;
}

