body {
    min-width: 1020px;
    position: relative;
    margin: 0;
    padding: 0;
/*    background: #1B2024;*/
    background: #fff;
    font-family: 'Abel', sans-serif;
    font-size: 15px;
    color: #8f8f8f;
}

