    function __construct()
    {
        parent::__construct();
    }

     function get($id)
    {
        $this->db->where('mailId', $id);
        $query = $this->db->get('mail');
        return $query->row();
    }

    function getAll()
    {
        $this->db->order_by('mailId', 'asc');
        $query = $this->db->get('mail');
        return $query->result();
    }
}

