    function __construct()
    {
        parent::__construct();
    }

        function get($id)
    {
        $this->db->where('id', $id);
        $query = $this->db->get('school');
        return $query->row();
    }

    function getAll()
    {
        $this->db->order_by('naam', 'asc');
        $query = $this->db->get('school');
        return $query->result();
    }
    
}

