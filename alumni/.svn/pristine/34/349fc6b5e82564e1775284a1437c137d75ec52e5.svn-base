    function __construct()
    {
        parent::__construct();
    }

     function get($id)
    {
        $this->db->where('lijstId', $id);
        $query = $this->db->get('mailinglijst');
        return $query->row();
    }

    function getAll()
    {
        $this->db->order_by('naam', 'asc');
        $query = $this->db->get('mailinglijst');
        return $query->result();
    }
}

